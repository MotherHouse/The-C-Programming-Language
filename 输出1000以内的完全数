#include <stdio.h>

void main()
{
    int i,a,add,m;
    for(i=2;i<=1000;i++)
    {
        m=0;
        for (a=1; a<i; a++)
        
            if(i%a==0)
            {
                m=m+a;
                
            }
            if(m==i)
            {
                add++;
                 printf("%d\n",i);
            
            }
           
            
        }
    
        printf(" perfect numbers add up:%d\n",add);
    
}


