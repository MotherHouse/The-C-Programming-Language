三、阅读下列程序，写出输出结果
1、
 main(  )
   { int x1, x2;
x1=x2 =1;
switch(x1-x2)
{    case 0:++x1; break;
case 1: x2++; 
 }
     printf(“x1=%d  x2=%d”, x1 , x2);  
}
x1=5   x2=8


3、
#include <stdio.h>
main()
{  int  i; 
for(i=5;i>=1;i-=2)
putchar(“*”);
putchar(“#”);
}
4、
# include “stdio.h”
     void main()
     {
      int  i=1;
      while(i++<=10)
        {
if (i%3) continue ;
printf(“%4d”,i);
        }   
     }
5、
#define N 2
#define M N+1
#define NUM (N+1+1)*N+1/2
main()
{ int i,n=0;
    for(i=0;i<NUM;i++)
      n++;
    printf("%d\n",n); 
}

6、
# include “stdio.h” 
void fun();
     void main()
     {
      int  i;
      for(i=0;i<3;i++)
        {
printf(“fun(%d):”,i);
         fun();
        }   
     }
void fun()
{
static int x=2;
x+=1;
printf(“x=%d\n”,x);
}
